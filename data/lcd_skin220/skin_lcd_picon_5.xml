<!-- template -->
	<screen name="SummaryClockPanel">
		<widget source="global.CurrentTime" render="Label" position="center,center" size="100,45" font="RegularLCD;40" halign="right" valign="bottom" noWrap="1">
			<convert type="ClockToText"></convert>
		</widget>
	</screen>

